<div calss="container">
 <% users =@users%>
    <div>
      <% if users.errors.any? %>
          <h2>We have some erroes here !</h2>
          <ul>
            <% users.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
      <% end %>
    </div>
    <div>
        [<%= users.email %>]
        <%= link_to "edit", edit_user_path(current_user.id) if users.id == current_user.id %>
    </div>
    <div>
        <%= users.name %>
    </div>
    <div>
        <%= simple_format(users.intro) %>
    </div>
    <div>
        <%= image_tag users.avatar,width:'300px' if users.avatar?%>
    </div>
    

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= users.name %>評論過的餐廳</h3>
      </div>
        <div class="panel-body">       
        <% @commented_restaurants.each do |restaurant| %>
         <div class="my-restaurant" >
          <%= link_to restaurant_path(restaurant) do %>
            <div class="my-restaurant-img">
            <%= image_tag restaurant.image,width:'200px' if restaurant.image?%>
            </div>
            <h5> <%= restaurant.name %></h5>
         
          </div> 
            <% end %>
            <% end %>
        </div>
    </div>
    
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= users.name %>收藏的餐廳</h3>
      </div>
        <div class="panel-body">       
        <% @favorite_restaurants.each do |restaurant| %>
         <div class="my-restaurant" >
          <%= link_to restaurant_path(restaurant) do %>
            <div class="my-restaurant-img">
            <%= image_tag restaurant.image,width:'200px' if restaurant.image?%>
            </div>
            <h5> <%= restaurant.name %></h5>
         
          </div> 
            <% end %>
            <% end %>
        </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= users.name %> followings</h3>
      </div>
        <div class="panel-body">       
        <% @followings.each do |follows_user| %>
         <div class="my-restaurant" >
          <%= link_to user_path(follows_user.id) do %>
            <h5> <%= follows_user.name %></h5>
         
          </div> 
            <% end %>
            <% end %>
        </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= users.name %> followers </h3>
      </div>
        <div class="panel-body">       
        <% @followers.each do |followers_user| %>
         <div class="my-restaurant" >
          <%= link_to user_path(followers_user.id) do %>
            <h5> <%= followers_user.name %></h5>
         
          </div> 
            <% end %>
            <% end %>
        </div>
    </div>

    <div class="panel panel-default">
    
       <%= link_to "#{users.name}的好友", friend_list_user_path(users) , class: "btn btn-primary" %>
      
    </div>

  
  
   
  
  <div>
      <%= link_to "back to index", restaurants_path(page: session[:page]) %>
  </div>
  
</div>